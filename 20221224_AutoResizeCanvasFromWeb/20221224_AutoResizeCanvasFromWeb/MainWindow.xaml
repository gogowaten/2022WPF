<Window x:Class="_20221224_AutoResizeCanvasFromWeb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20221224_AutoResizeCanvasFromWeb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid>
    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
      <local:AutoResizeCanvas Background="Gold">
        <TextBlock Text="autosize" Canvas.Left="0" Canvas.Top="0"/>
        <!--<TextBlock Text="autosize" Canvas.Left="30" Canvas.Top="30"/>-->
        <local:AutoResizeCanvas Canvas.Left="50" Canvas.Top="100">
          <TextBlock Text="autosize" Canvas.Left="0" Canvas.Top="0"/>
          <!--<TextBlock Text="autosize" Canvas.Left="30" Canvas.Top="30"/>-->

        </local:AutoResizeCanvas>
      </local:AutoResizeCanvas>
    </Canvas>
  </Grid>
</Window>
