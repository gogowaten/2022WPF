<Window x:Class="_20221208.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20221208"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="150"/>
    </Grid.RowDefinitions>
    <Canvas Name="MyCanvas" Grid.Row="0">
      <local:TTTextBlock x:Name="MyTextBlock" Text="TTTXAML" FontSize="20" Y="50" X="250" Z="0"
                         BackColor="Aqua" FontColor="Magenta"/>
      <local:TTRectangle x:Name="MyRectangle" Fill="Blue" Width="10" Height="200" X="50" Y="50" Z="0"
                         />
      <local:TTGroup x:Name="MyRootGroup"/>
    </Canvas>
    <StackPanel Grid.Row="1">
      <Button Name="Button1" Content="kakunin" Click="Button1_Click"/>      
      <TextBlock Text="{Binding}"/>
      <TextBlock Text="{Binding Name}"/>
      <TextBlock Text="{Binding ClickedItem.Name}"/>
      <TextBlock Text="{Binding ClickedItem.MyName}"/>
      <TextBlock Text="{Binding ClickedItem.X}"/>
      <TextBlock Text="{Binding ClickedItem.Y}"/>
      <TextBlock DataContext="{Binding ClickedItem}" Text="{Binding Name}"/>
      
    </StackPanel>
  </Grid>
</Window>
