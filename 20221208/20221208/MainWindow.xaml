          <local:TTTextBlock x:Name="Item1" Text="Test1" FontSize="30" BackColor="Gold"/>
          <local:TTTextBlock x:Name="Item2" Text="Test2" FontSize="30" BackColor="Gold" X="100"/>
          <local:TTRectangle x:Name="Item3" Fill="Lime" Width="100" Height="20" Y="50"/>
        </local:TTGroup>

      </local:TTRoot>
    </Canvas>
    <StackPanel Grid.Row="1" DataContext="{Binding ElementName=MyRootThumb}">
      <StackPanel Orientation="Horizontal">
        <Button Name="Button1" Content="kakunin" Click="Button1_Click"/>
        <Button Name="Button2" Content="kakunin2" Click="Button2_Click"/>
      </StackPanel>
      <TextBlock Text="{Binding}"/>
      <TextBlock Text="{Binding Name, StringFormat=Name \= {0}}"/>
      <TextBlock Text="{Binding ClickedThumb, StringFormat= Clicked \= {0}}"/>
      <TextBlock Text="{Binding ClickedThumb.MyName, StringFormat= Clicked \= {0}}"/>
      <TextBlock Text="{Binding ClickedThumb.ActualWidth, StringFormat=Clicked_ActualWidth  \= {0}}"/>
      <TextBlock Text="{Binding ClickedThumb.Y, StringFormat=Clicked_Y \= {0}}"/>
      <TextBlock Text="{Binding EnableThumb, StringFormat=EnableT \= {0}}"/>
      <TextBlock Text="{Binding EnableThumb.Width, StringFormat=EnableT_Width \= {0}}"/>
      <TextBlock Text="{Binding EnableThumb.Y, StringFormat=EnableT_Y \= {0}}"/>
      <TextBlock Text="{Binding ClickedThumb.ActiveThumb.Name, StringFormat=Active \= {0}}"/>
      <TextBlock Text="{Binding ClickedThumb.ActiveThumb.Width, StringFormat=Active_Width \= {0}}"/>
      <TextBlock Text="{Binding ClickedThumb.ActiveThumb.Y, StringFormat=Active_Y \= {0}}"/>
      <TextBlock DataContext="{Binding ElementName=Item1}" Text="{Binding ActualWidth, StringFormat=acWidth \= {0}}"/>

