<Window x:Class="_20221222_ExCanvas_Thumb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20221222_ExCanvas_Thumb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>
    <Canvas>      
      <local:ExCanvas x:Name="MyExCanvas" Background="Gold">
        <Thumb x:Name="MyThumb1" Width="100" Height="30" Canvas.Left="100" Canvas.Top="50" DragDelta="T_DragDelta"/>
        <local:ExCanvas Background="DodgerBlue">
          <Thumb x:Name="MyThumb2" Width="100" Height="30" Canvas.Left="20" Canvas.Top="20" DragDelta="T_DragDelta"/>
        </local:ExCanvas>
      </local:ExCanvas>
    </Canvas>
    </Grid>
</Window>
