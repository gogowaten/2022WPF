<Window x:Class="_20221203_矢印図形.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20221203_矢印図形"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid>
    <Canvas>
      <local:Arrow StrokeThickness="20" Stroke="Red" X1="20" Y1="50" X2="300" Y2="50"
                   HeadType="Type0" Angle="20"/>
      <local:Arrow StrokeThickness="20" Stroke="Red" X1="20" Y1="150" X2="300" Y2="150"
                   HeadType="Type1"/>
      <local:Arrow StrokeThickness="20" Stroke="Red" X1="20" Y1="250" X2="300" Y2="250"
                   HeadType="Type2"/>
      <local:Arrow StrokeThickness="50" Stroke="Red" X1="320" Y1="50" X2="580" Y2="50"
                   HeadType="Type0" Angle="20"/>
      <local:Arrow StrokeThickness="5" Stroke="Red" X1="320" Y1="150" X2="580" Y2="150"
                   HeadType="Type0" Angle="20"/>
      <local:Arrow StrokeThickness="1" Stroke="Red" X1="320" Y1="170" X2="580" Y2="170"
                   HeadType="Type0" Angle="20"/>
    </Canvas>
  </Grid>
</Window>
