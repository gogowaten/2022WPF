<Window x:Class="_20221128.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20221128"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid UseLayoutRounding="True">
    <Canvas Background="White">
      <!--<Rectangle Width="500" Height="20" Fill="Blue" Canvas.Top="120"/>-->
      <Rectangle Width="300" Height="1.0" Fill="Blue" Canvas.Left="10.0" Canvas.Top="10"/>
      <local:Arrow X1="20" Y1="2" X2="300" Y2="2" HeadSize="50" Angle="30" HeadType="Type11"
                   Stroke="Blue" StrokeThickness="3.0"/>
      
      
      <Line X1="300" Y1="50" X2="20" Y2="50" Stroke="Blue"/>
      
      <!--<Rectangle Width="100" Height="100" Fill="Blue" Canvas.Left="100" Canvas.Top="100"/>-->

    </Canvas>
    </Grid>
</Window>
