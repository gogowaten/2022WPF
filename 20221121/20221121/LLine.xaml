<UserControl x:Class="_20221121.LLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_20221121"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="200"
             Name="parent">
  <Canvas DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:LLine}}">
    <Line x:Name="MyLine" Stroke="{Binding Stroke}"
          X1="{Binding X1}" Y1="{Binding Y1}"
          X2="{Binding X2}" Y2="{Binding Y2}"
          StrokeThickness="2"
          SizeChanged="MyLine_SizeChanged"/>

    <Rectangle x:Name="MyRectangle" Fill="Red"
               Height="{Binding HeadSize}" Width="{Binding HeadSize}"
               Canvas.Left="-10" Canvas.Top="0"/>
  </Canvas>
</UserControl>
